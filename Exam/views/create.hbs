
        <section id="createPage">
            <form id='createForm' action="/toys/create" method="post">
            {{#with toy}}
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" placeholder="Title..." value="{{title}}">
                <label for="charity">For Charity:</label>
                <input type="text" id="charity" name="charity" placeholder="For Charity..." value="{{charity}}">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" placeholder="Price..." step="0.01" value="{{price}}">
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" placeholder="Description..." value="{{description}}">
                <label for="category">Category:</label>
                <input type="text" id="description" name="category" placeholder="Category..." value="{{category}}">
                <label for="image">Image:</label>
                <input type="text" id="image" name="imgUrl" placeholder="Image..." value="{{imgUrl}}">
                <input type="submit" class="create" value="Create Toy Offer">
                {{/with}}
            </form>
        </section>
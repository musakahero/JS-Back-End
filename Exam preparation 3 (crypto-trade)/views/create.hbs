<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action="/crypto/create" method="post">
        {{#with offer}}
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imgUrl" placeholder="http://..." value="{{imgUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" placeholder="31,166.71" step="0.01" value="{{price}}">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="Introduce your coins...">{{description}}</textarea>
            {{/with}}
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet" {{#if isCryptoWallet}}selected{{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if isCreditCard}}selected{{/if}}>Credit Card</option>
                <option value="debit-card" {{#if isDebitCard}}selected{{/if}}>Debit Card</option>
                <option value="paypal" {{#if isPayPal}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>
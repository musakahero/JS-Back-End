<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        {{#with offer}}
        <form action="/crypto/{{_id}}/edit" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imgUrl" value="{{imgUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{description}}</textarea>
                <label>Payment method:</label>
        {{/with}}
            <select id="payment" name="paymentMethod">
                <option value="crypto-wallet" {{#if isCryptoWallet}}selected{{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if isCreditCard}}selected{{/if}}>Credit Card</option>
                <option value="debit-card" {{#if isDebitCard}}selected{{/if}}>Debit Card</option>
                <option value="paypal" {{#if isPayPal}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>
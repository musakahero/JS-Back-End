<section id="details-info">
    {{#with offer}}
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{imgUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="payment">Payment method: {{paymentMethod}}</h3>
            <p id="price"><span>Price: ${{price}}</span></p>
            <p id="description">{{description}}</p>
        </div>
    {{/with}}
        {{!-- if logged in --}}
        {{#if email}}
            {{#with offer}}
            <div class="product-btn">
                {{!-- if owner --}}
                {{#if isOwner}}
                    <div class="author">
                        <a href="/crypto/{{_id}}/edit" class="btn-edit">Edit</a>
                        <a href="/crypto/{{_id}}/delete" class="btn-delete">Delete</a>
                    </div> 
                {{else}}
                {{!-- if not owner --}}
                    {{#if isPurchased}}
                    {{!-- if purchased --}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                    {{!-- if not purchased --}}
                    <a href="/crypto/{{_id}}/buy" class="btn-buy">Buy</a>
                    {{/if}}
                {{/if}}
            </div>
            {{/with}}
        {{/if}}
    </div>
    
</section>
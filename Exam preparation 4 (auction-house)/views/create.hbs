<!-- Create Page -->
<section id="create-section" class="">

    <h1 class="item">New Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post" action="/auction/create">
{{#with auction}}
            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="estate" {{#if isRealEstate}}selected{{/if}}>Real Estate</option>
                        <option value="vehicles" {{#if isVehicles}}selected{{/if}}>Vehicles</option>
                        <option value="furniture" {{#if isFurniture}}selected{{/if}}>Furniture</option>
                        <option value="electronics" {{#if isElectronics}}selected{{/if}}>Electronics</option>
                        <option value="other" {{#if isOther}}selected{{/if}}>Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imgUrl" value="{{imgUrl}}"></label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" step="0.01" value="{{price}}"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description" value="{{description}}"></textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>
{{/with}}
        </form>

    </div>

</section>